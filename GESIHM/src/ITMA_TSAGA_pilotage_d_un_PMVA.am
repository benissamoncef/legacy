				if vl_erreur = COM_OK
				{
					vm_PMV.Numero_Evt	= vm_Lect_PMV.Numero_Evt
 					vm_PMV.Cle_Evt		= vm_Lect_PMV.Cle_Evt
 					vm_PMV.fmc_liee	= vm_Lect_PMV.fmc_liee
					ITMA_TSAGA_MAJ_PMVA ( "actuel" )
				}	
		}
		else
