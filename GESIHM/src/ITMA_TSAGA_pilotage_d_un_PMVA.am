				{ vl_erreur = ITMA_TSAGA_Commande_Fin_PMVA() }
			}
			else
			{	vl_erreur = COM_NOK }
		}
			
		if vl_erreur = COM_NOK
		{	
			info_message@("Commande PMVA numéro " ++ vm_Lect_PMV.numero_eqt ++ " impossible")
		}
	}
	else
	{
		info_message@("Vous devez lier cette action à une FMC")
		DB_CTRL_GRAYED@(vm_fenetre,"BP_lier_fmc",FALSE)
		DB_CTRL_GRAYED@(vm_fenetre,"BP_executer",FALSE)
		vl_erreur = COM_NOK
	} 

	RETURN(vl_erreur)
