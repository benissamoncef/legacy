MACRO ITMA_TPMVA_Messages_TDP ( la_Lib_Dest, la_Txt_Tdp, la_Messages_TdP )


/*
* ARGUMENTS EN ENTREE 	:
*   la_Lib_Dest		: Liste des libelles de destinations TdP ;
*   la_Txt_Tdp		: Liste des textes de Temps de Parcours.
*
*
* ARGUMENTS EN SORTIE	: 
*   la_Messages_TdP	: Liste des lignes de messages TdP a afficher.
*
*
* CODE RETOUR		: COM_OK en cas d'execution correcte, COM_NOK sinon.
*
*
* CONDITION D'UTILISATION
*   ITMA_PMV
*
*
* FONCTION
*  
*
---------------------------------------------------------------------------- */

	VAR	ll_libelles
	VAR	vl_nb_lib_dest_longs
	VAR	vl_i_marqueur, vl_idx_tdp
	VAR	i

/* Determiner si l'un des libelles de destinations contient un marqueur de cesure */
vl_nb_lib_dest_longs = 0
FOR i = 0  TO (ARRAY_SIZE@ (la_Lib_Dest) - 1)
	ll_libelles[i] = TRIM@ (la_Lib_Dest[i])
	IF (ll_libelles[i] <> "")  AND  (STRING_INDEX@ (ll_libelles[i], XZADC_LIB_TDP_MRQ_COUP) > 0) {
		vl_nb_lib_dest_longs = vl_nb_lib_dest_longs + 1
	}
NEXT i


la_Messages_TdP = { "", "", "", "", "" }
vl_idx_tdp = 0

/* Pour chaque destination Temps de Parcours */
FOR i = 0  TO (ARRAY_SIZE@ (ll_libelles) - 1)
	vl_i_marqueur = STRING_INDEX@ (ll_libelles[i], XZADC_LIB_TDP_MRQ_COUP)

	/* Si un Temps de Parcours est disponible alors */
	IF (ll_libelles[i] <> "")  AND  (TRIM@ (la_Txt_Tdp[i]) <> "") {
		/* Si le libelle contient le marqueur alors decouper le message TdP sur 2 lignes */
		IF (ll_libelles[i] <> "")  AND  (vl_i_marqueur > 0) {
			la_Messages_TdP[vl_idx_tdp] = SUBSTRING@ (ll_libelles[i], 1, vl_i_marqueur - 1)
			vl_idx_tdp = vl_idx_tdp + 1
			ITMA_TPMVA_Tabuler_ligne_bis (SUBSTRING@ (ll_libelles[i], vl_i_marqueur + 1),
			                                 la_Txt_Tdp[i], la_Messages_TdP[vl_idx_tdp])
		} ELSE {
			ITMA_TPMVA_Tabuler_ligne_bis (ll_libelles[i], la_Txt_Tdp[i], la_Messages_TdP[vl_idx_tdp])
		}
	} ELSE {
		/* En l'absence de Temps de Parcours, occuper 2 lignes si le libelle l'indique */
		IF (ll_libelles[i] <> "")  AND  (vl_i_marqueur > 0) {
			vl_idx_tdp = vl_idx_tdp + 1
		}
	}
	vl_idx_tdp = vl_idx_tdp + 1

	/* Si aucun libelle n'est a decouper alors sauter la troisieme ligne */
	IF (vl_nb_lib_dest_longs = 0)  AND  (i = 1) {
		vl_idx_tdp = vl_idx_tdp + 1
	}
NEXT i

RETURN (COM_OK)

ENDMACRO
