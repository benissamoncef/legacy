* genere les regles nav
-------------------------------------------------------------------------------
* SEQUENCE D'APPEL :
*/

MACRO dedi_make_nav()

/*
* ARGUMENTS EN ENTREE : Aucun
*
* ARGUMENTS EN SORTIE : Aucun
*
* CODE RETOUR         : Indefini
*
* CONDITION D'UTILISATION
* dedi
* FONCTION
*
---------------------------------------------------------------------------- */
VAR tl_data
VAR vl_indice
VAR tl_commentaire
VAR vl_data
VAR tl_var,vl_index

	vl_index=0

	trace_chaine("")
	trace_chaine("MODE DE FONCTIONNEMENT DES BRA")
	trace_chaine("")


	/*A
	**  on exploite le fichier des modes nav 
	*/
	tl_data = READ_ASCII_FILE@(AX_PATH++IE_FILE_FONCT_NAV)

	FOR vl_indice=0 TO (ARRAY_SIZE@(tl_data)-1)
		vl_data[vl_indice]=ARRAY_FROM_STRING@(tl_data[vl_indice],DEDI_CAR_SEPAR)
		tl_var[vl_index]=vl_data[vl_indice][0]
		tl_var[vl_index+1]=vl_data[vl_indice][1]
		vl_index=vl_index+2
	NEXT vl_indice

	dedi_genere(IE_MODELE_NAV,vl_indice,tl_var)
	trace_point()

	tl_commentaire[0] = "*        MODE DE FONCTIONNEMENT BRA :" 
	tl_commentaire[1] = "*        suivant le type d'evenement"
	tl_commentaire[2] = "*        "
	dedi_shell(IE_MODELE_NAV, IE_SUFFIXE_RL, tl_commentaire)


ENDMACRO






