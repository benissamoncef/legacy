FUNCTION ec23_circulation_init (va_fenetre)

/*
* ARGUMENTS EN ENTREE :
*
*
* ARGUMENTS EN SORTIE : Aucun
*
*
* CODE RETOUR         : Indefini
*
* CONDITION D'UTILISATION
*
* FONCTION
*
---------------------------------------------------------------------------- */
VAR tl_data
VAR vl_indice

	/*A affichage des variables autorisees*/
	tm_var=dedi_var_fenetre(IE_FILE_CIRCULATION_FAX)
	DB_CTRL_STRINGS@(va_fenetre,"BL_var",tm_var)

	/*A chargement des perturbations depuis le fichier de config*/
	tm_def=READ_ASCII_FILE@(AX_PATH++IE_FILE_CIRCULATION_FAX)

	/*A affiche les textes*/
	DB_CTRL_VALUE@(va_fenetre,"BS_expression1",tm_def[0])
	DB_CTRL_VALUE@(va_fenetre,"BS_expression2",tm_def[1])

ENDFUNCTION
