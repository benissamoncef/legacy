/* ============================================================ */
/*   Nom de la base   :  MIGRAZUR                               */
/*   Nom de SGBD      :  SYBASE10                               */
/*   Date de creation :  29/07/94                               */
/* ============================================================ */

/* ============================================================ */
/*   Table : MGA_CFG_PO                                         */
/* ============================================================ */

/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'MGA_CFG_PO' and type = 'U')
	begin
	drop table MGA_CFG_PO
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()

/*
*  Fonctionalit� de la table
*  -------------------------
*  Contient les compl�mentaires de la fmc
*
*  Description des colonnes de la table
*  ------------------------------------
*        ip                 : ip du poste operateur
*        hostname           : hostname du poste operateur
*        district           : district
*        displayPort1       : display port du premier ecran (pour tops ou affichage des remorques)
*        displayPort2       : display port du second ecran s'il existe
*/

create table MGA_CFG_PO
(
    ip                              varchar(20)              not null,
    hostname                        varchar(20)              not null,
    district                        varchar(3)               not null,
    displayPort1                    varchar(20)              not null,
    displayPort2                    varchar(20)              null

)
/* ajout des droits a public*/
grant all on MGA_CFG_PO to public

/* =============================================================== */
/*   creation des cles primaires et des index en fonction de la base courante                     */
/* =============================================================== */
if @nom_base = 'HIS'
	begin
	/* ========================================================== */
	/*   Cle primaire : ip                                       */
	/* ========================================================== */
	execute sp_primarykey MGA_CFG_PO, ip

	/* ========================================================== */
	/*   Index : MGA_CFG_PO_PK                                    */
	/* ========================================================== */
	create unique index MGA_CFG_PO_PK on MGA_CFG_PO (ip)
	end

if @nom_base = 'SVG'
	begin
	/* ========================================================== */
	/*   Cle primaire : ip                                        */
	/* ========================================================== */
	execute sp_primarykey MGA_CFG_PO, ip

	/* ========================================================== */
	/*   Index : MGA_CFG_PO_PK                                    */
	/* ========================================================== */
	create unique index MGA_CFG_PO_PK on MGA_CFG_PO (ip)
	end

if @nom_base = 'EXP'
	begin
	/* ========================================================== */
	/*   Cle primaire : ip                                      */
	/* ========================================================== */
	 execute sp_primarykey MGA_CFG_PO, ip

	/* ========================================================== */
	/*   Index : MGA_CFG_PO_PK                                         */
	/* ========================================================== */
	create unique index MGA_CFG_PO_PK on MGA_CFG_PO (ip)
	end

go
