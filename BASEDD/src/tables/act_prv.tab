/* ============================================================ */

/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'ACT_PRV' and type = 'U')
	begin
	drop table ACT_PRV
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()


/*
*  Fonctionalit� de la table
*  -------------------------
*  Contient les compl�ments d'action de type pilotage de pmva
*
*  Description des colonnes de la table
*  ------------------------------------
*        actio              	  : num�ro d'une action
*        PRV                    
*        bandeau                  : texte du bandeau
*        vitesse            : clignotant ou non
*        sit               	  : num�ro du site de l'action
*	 depass_seuil		  : flag de depassement de seuil haut de tdp
*/


create table ACT_PRV
(
    actio                           int                   not null,
    PRV                             smallint              not null,
    bandeau                  char(15)              not null,
    vitesse			    	 char(4)				   not null,
    sit                             T_SITE                null    ,
    depass_seuil		    tinyint		  null	  
)
/* ajout des droits a public*/
grant all on ACT_PRV to public

/* =============================================================== */
/*   creation des cles primaire et des index en fonction de la base courante                      */
/* =============================================================== */
if @nom_base = 'HIS'
	begin
	/* ========================================================== */
	/*   Cle primaire : actio                                         */
	/* ========================================================== */
	execute sp_primarykey ACT_PRV, actio, sit

	/* ============================================================ */
	/*   Index : ACT_PRV_PK                                         */
	/*   Index : ACT_PRV_FK1                                        */
	/* ============================================================ */
	create unique index ACT_PRV_PK on ACT_PRV (actio, sit)
	create index ACT_PRV_FK1 on ACT_PRV (PRV)
	end

if @nom_base = 'SVG'
	begin
	/* ========================================================== */
	/*   Cle primaire : actio                                         */
	/* ========================================================== */
	execute sp_primarykey ACT_PRV, actio, sit

	/* ============================================================ */
	/*   Index : ACT_PRV_PK                                         */
	/*   Index : ACT_PRV_FK1                                        */
	/* ============================================================ */
	create unique index ACT_PRV_PK on ACT_PRV (actio, sit)
	create index ACT_PRV_FK1 on ACT_PRV (PRV)
	end

if @nom_base = 'EXP'
	begin
	/* ========================================================== */
	/*   Cle primaire : actio                                         */
	/* ========================================================== */
	execute sp_primarykey ACT_PRV, actio, sit

	/* ============================================================ */
	/*   Index : ACT_PRV_PK                                         */
	/*   Index : ACT_PRV_FK1                                        */
	/* ============================================================ */
	create unique index ACT_PRV_PK on ACT_PRV (actio, sit)
	create index ACT_PRV_FK1 on ACT_PRV (PRV)
	end

go
