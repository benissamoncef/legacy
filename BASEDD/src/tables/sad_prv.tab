/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'SAD_PRV' and type = 'U')
	begin
	drop table SAD_PRV
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()


/*
*  Fonctionalit� de la table
*  -------------------------
*  Contient les compl�ments de plan d'action de type pilotage de PRV
*
*  Description des colonnes de la table
*  ------------------------------------
*        numero             : num�ro d'un compl�ment de plan d'action
*        ordre              : num�ro d'ordre de priorit� du compl�ment de plan d'action
*        district           : num�ro de district 
*        equipement         : numero d'�quipement de type prv � piloter
*        priorite           : num�ro de priorit�
*        remarque           : remarque
*        explication        : explication
*        bandeau 
*		 vitesse
*        realisable         : realisable ou non
*        libelle            : lib�ll� 
*/

create table SAD_PRV
(
    numero                          smallint              not null,
    ordre                           smallint              not null,
    district                        tinyint               not null,
    equipement                      smallint              not null,
    priorite                        tinyint               not null,
    remarque                        char(50)              not null,
    explication                     char(250)             not null,
    bandeau           		        char(6)              null,
	vitesse						    char(6)               null,
	realisable                      bit                           ,
    libelle                         T_NOM                 not null
)
/* ajout des droits a public*/
grant all on SAD_PRV to public

/* =============================================================== */
/*   creation des cles primaires et des index en fonction de la base courante                     */
/* =============================================================== */
if @nom_base = 'EXP'
	begin
	/* ========================================================== */
	/*   Cle primaire : numero, ordre                                      */
	/* ========================================================== */
	execute sp_primarykey SAD_PRV, numero, ordre

	/* ========================================================== */
	/*   Index : SAD_PRV_PK                                         */
	/* ========================================================== */
	create unique index SAD_PRV_PK on SAD_PRV (numero, ordre)
	end

go
