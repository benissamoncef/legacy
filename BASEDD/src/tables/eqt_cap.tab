/* ============================================================ */
/*   Nom de la base   :  MIGRAZUR                               */
/*   Nom de SGBD      :  SYBASE10                               */
/*   Date de creation :  29/07/94                              */
/* ============================================================ */

/* ============================================================ */
/*   Table : EQT_CAP                                            */
/* ============================================================ */

/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'EQT_CAP' and type = 'U')
	begin
	drop table EQT_CAP
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()

/*
*  Fonctionalit� de la table
*  -------------------------
*  Contient les compl�ments de description des controleurs de feux
*
*  Description des colonnes de la table
*  ------------------------------------
*	numero		numero de l'equipement	
*	type		type : capteur bouchon, capteur lit d'arret
*	rgs		adresse RGS
*	adresse_ip	adresse IP
*	port_maitre	port d'ecriture des commandes
*	port_esclave	port de lecture des alertes
*	point_caracteristique 	echangeur de rattachement
*/


create table EQT_CAP
(
	numero			smallint	not null,
	type			tinyint	null,
	rgs			char(4)	not null,
	adresse_ip		char(20)	not null,
	port_maitre		integer	null,
	port_esclave		integer	null,
	point_caracteristique 	tinyint	null
)

/* ajout des droits a public*/
grant all on EQT_CAP to public

/* =============================================================== */
/*   creation des cles primaires et des index en fonction de la base courante                     */
/* =============================================================== */
if @nom_base = 'CFG' 
	begin
	/* ========================================================== */
	/*   Cle primaire : numero                                      */
	/* ========================================================== */
	execute sp_primarykey EQT_CAP, numero

	/* ========================================================== */
	/*   Index : EQT_CAP_PK                                         */
	/* ========================================================== */
	create unique index EQT_CAP_PK on EQT_CAP (numero)
	end

if @nom_base = 'CFT'
	begin
	/* ========================================================== */
	/*   Cle primaire : numero                                      */
	/* ========================================================== */
	execute sp_primarykey EQT_CAP, numero

	/* ========================================================== */
	/*   Index : EQT_CAP_PK                                         */
	/* ========================================================== */
	create unique index EQT_CAP_PK on EQT_CAP (numero)
	end

go
