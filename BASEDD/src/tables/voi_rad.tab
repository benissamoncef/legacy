/* ============================================================ */
/*   Nom de la base   :  MIGRAZUR                               */
/*   Nom de SGBD      :  SYBASE10                               */
/*   Date de creation :  28/11/94                              */
/* ============================================================ */

/* ============================================================ */
/*   Table : VOI_RAD                                            */
/* ============================================================ */

/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'VOI_RAD' and type = 'U')
	begin
	drop table VOI_RAD
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()

/*
*  Fonctionalité de la table
*  -------------------------
*  Contient les Åtats des voies des dÅtecteurs d'incident
*
*  Description des colonnes de la table
*  ------------------------------------
*        numero                         : numéro de l'équipement RADT
*        evenement                      : numéro de la fiche main courante 
*        cle                            : numéro de clé de la fiche main courante 
*        nombre_de_voies                : nombre de voies du RADT
*        sens                           : sens localisant la station RADT
*        mode                           : Åtat de l'enregistrement 
*                                         (crÅation/modification/lu/suppression)
*        local_tech                     : nom du local technique
*        VR                             : état de la voie rapide
*        VM2                            : état de la voie médiane 2
*        VM1                            : état de la voie médiane 1
*        VL                             : état de la voie lente
*        BAU                            : état de la voie BAU
*
*  Remarque
*  --------
*  Voici les différents états possibles des voies :
*      état :       libéllé
*      -------------------------------------------------------------------
*        0  :  voie inconnue (sens de la localisation de la fmc non connu)
*        1  :  voie normale
*        2  :  voie inversée
*        3  :  voie bloquée
*        4  :  voie inexistante
*        5  :  voie neutralisée
*        6  :  voie bloquée et neutralisée
*        7  :  voie BAU normale
*
*/


create table VOI_RAD
(
    numero                          smallint              not null,
    evenement                       int                   not null,
    cle                             tinyint               not null,
    sens                            tinyint               not null,
    nombre_de_voies                 tinyint               not null,
    mode                            tinyint               not null,
    local_tech                      char(10)              not null,
    VR                              tinyint               not null,
    VM2                             tinyint               not null,
    VM1                             tinyint               not null,
    VL                              tinyint               not null,
    BAU                             tinyint               not null
)
/* ajout des droits a public*/
grant all on VOI_RAD to public

go
