/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'FMC_COM' and type = 'U')
	begin
	drop table FMC_COM
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()

/*
*  Fonctionalit� de la table
*  -------------------------
*  Contient les compl�mentaires de la fmc
*
*  Description des colonnes de la table
*  ------------------------------------
*        evenement               : num�ro de la fiche main courante
*        cle                     : num�ro de cl� de la fiche main courante
*        numero                  : numero du morceau de commentaire
*        horodate_validation     : date de validation de la fiche main courante
*        horodate_fin            : date de fin de validit� de commentaire
*        texte                   : morceau de texte de commentaire
*        sit                     : num�ro du site de la fmc
*        email                   : email de l'utilisateur ayant ajouté le commentaire
*/


create table FMC_COM
(
    evenement                       int                   not null,
    cle                             tinyint               not null,
    numero                          smallint              not null,
    horodate_validation             datetime              not null,
    horodate_fin                    datetime              null    ,
    texte                           char(250)             null    ,
    sit                             T_SITE                null    ,
    email                           varchar(255)          null
)
/* ajout des droits a public*/
grant all on FMC_COM to public

/* =============================================================== */
/*   creation des cles primaires et des index en fonction de la base courante                     */
/* =============================================================== */
if @nom_base = 'HIS'
	begin
	/* ========================================================== */
	/*   Cle primaire : evenement, cle, numero                                      */
	/* ========================================================== */
	execute sp_primarykey FMC_COM, evenement, cle, numero, sit

	/* ========================================================== */
	/*   Index : FMC_COM_PK                                         */
	/* ========================================================== */
	create unique index FMC_COM_PK on FMC_COM (evenement, cle, numero,sit)
	end

if @nom_base = 'SVG'
	begin
	/* ========================================================== */
	/*   Cle primaire : evenement, cle, numero                                      */
	/* ========================================================== */
	execute sp_primarykey FMC_COM, evenement, cle, numero,sit

	/* ========================================================== */
	/*   Index : FMC_COM_PK                                         */
	/* ========================================================== */
	create unique index FMC_COM_PK on FMC_COM (evenement, cle, numero,sit)
	end

if @nom_base = 'EXP'
	begin
	/* ========================================================== */
	/*   Cle primaire : evenement, cle, numero                                      */
	/* ========================================================== */
	execute sp_primarykey FMC_COM, evenement, cle, numero,sit

	/* ========================================================== */
	/*   Index : FMC_COM_PK                                         */
	/* ========================================================== */
	create unique index FMC_COM_PK on FMC_COM (evenement, cle, numero,sit)
	end

go
