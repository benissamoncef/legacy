/* ============================================================ */
/*   Nom de la base   :  MIGRAZUR                               */
/*   Nom de SGBD      :  SYBASE10                               */
/*   Date de creation :  29/07/94                              */
/* ============================================================ */

/* ============================================================ */
/*   Table : EQT_CFE                                            */
/* ============================================================ */

/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'EQT_CFE' and type = 'U')
	begin
	drop table EQT_CFE
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()

/*
*  Fonctionalit� de la table
*  -------------------------
*  Contient les compl�ments de description des controleurs de feux
*
*  Description des colonnes de la table
*  ------------------------------------
*        numero                  : numero d'equipement
*        adresse_ip              : adresse ip de l'equipement
*        port                    : port ip de l'equipement
*/


create table EQT_CFE
(
    numero                          smallint              not null,
    adresse_ip                      char(20)               not null,
    port                            integer               not null
)
/* ajout des droits a public*/
grant all on EQT_CFE to public

/* =============================================================== */
/*   creation des cles primaires et des index en fonction de la base courante                     */
/* =============================================================== */
if @nom_base = 'CFG' 
	begin
	/* ========================================================== */
	/*   Cle primaire : numero                                      */
	/* ========================================================== */
	execute sp_primarykey EQT_CFE, numero

	/* ========================================================== */
	/*   Index : EQT_CFE_PK                                         */
	/* ========================================================== */
	create unique index EQT_CFE_PK on EQT_CFE (numero)
	end

if @nom_base = 'CFT'
	begin
	/* ========================================================== */
	/*   Cle primaire : numero                                      */
	/* ========================================================== */
	execute sp_primarykey EQT_CFE, numero

	/* ========================================================== */
	/*   Index : EQT_CFE_PK                                         */
	/* ========================================================== */
	create unique index EQT_CFE_PK on EQT_CFE (numero)
	end

go
