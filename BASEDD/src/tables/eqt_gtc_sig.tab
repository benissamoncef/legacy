/* ============================================================ */
/*   Nom de la base   :  MIGRAZUR                               */
/*   Nom de SGBD      :  SYBASE10                               */
/*   Date de creation :  22/08/2007                             */
/* ============================================================ */

/* ============================================================ */
/*   Table : EQT_GTC_SIG                                        */
/* ============================================================ */

/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'EQT_GTC_SIG' and type = 'U')
	begin
	drop table EQT_GTC_SIG
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()

/*
*  Fonctionalité de la table
*  -------------------------
*  Contient les equipements du domaine signalisation
*
*  Description des colonnes de la table
*  ------------------------------------
*        type                    : type de l'equipement
*        numero                  : identifiant de l'equipement
*        type_ouvrage            : type ouvrage maitre
*        nature                  : nature de l'équipement
*/

create table EQT_GTC_SIG
(
    type                            tinyint               not null,
    numero                          smallint              not null,
    type_ouvrage                    tinyint               not null,
	nature                          tinyint                   null
)
/* ajout des droits a public*/
grant all on EQT_GTC_SIG to public

/* ============================================================================= */
/*   creation des cles primaire et des index en fonction de la base courante     */
/* ============================================================================= */
if @nom_base = 'CFG'
	begin
	/* ========================================================== */
	/*   Cle primaire : type, numero                              */
	/* ========================================================== */
	execute sp_primarykey EQT_GTC_SIG, type, numero

	/* ========================================================== */
	/*   Index : EQT_GTC_SIG_PK                                   */
	/* ========================================================== */
	create unique index EQT_GTC_SIG_PK on EQT_GTC_SIG (type, numero)
	end

if @nom_base = 'CFT'
	begin
	/* ========================================================== */
	/*   Cle primaire : type, numero                              */
	/* ========================================================== */
	execute sp_primarykey EQT_GTC_SIG, type, numero

	/* ========================================================== */
	/*   Index : EQT_GTC_SIG_PK                                   */
	/* ========================================================== */
	create unique index EQT_GTC_SIG_PK on EQT_GTC_SIG (type, numero)
	end

go
