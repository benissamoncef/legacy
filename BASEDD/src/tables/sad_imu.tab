/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'SAD_IMU' and type = 'U')
	begin
	drop table SAD_IMU
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()


/*
*  Fonctionalit� de la table
*  -------------------------
*  Contient les compl�ments de plan d'action de type pilotage de IMU
*
*  Description des colonnes de la table
*  ------------------------------------
*        numero             : num�ro d'un compl�ment de plan d'action
*        ordre              : num�ro d'ordre de priorit� du compl�ment de plan d'action
*        district           : num�ro de district 
*        equipement         : numero d'�quipement de type cfe � piloter
*        priorite           : num�ro de priorit�
*        remarque           : remarque
*        explication        : explication
*        commande IMU	    : nom du message|num zone 1|num zone 2|num zone 3 etc. 
*        realisable         : realisable ou non
*        libelle            : lib�ll� 
*/

create table SAD_IMU
(
    numero                          smallint              not null,
    ordre                           smallint              not null,
    district                        tinyint               not null,
    equipement                      smallint              not null,
    priorite                        tinyint               not null,
    remarque                        char(50)              not null,
    explication                     char(250)             not null,
    realisable                      bit                           ,
    chaine                          char(250)             not null,
    intervalle                      int                   not null,
    cycles                          int                   not null,
    sit                             T_SITE                null,
    duree                           int                   not null,
    libelle                         T_NOM                 not null

)
/* ajout des droits a public*/
grant all on SAD_IMU to public

/* =============================================================== */
/*   creation des cles primaires et des index en fonction de la base courante                     */
/* =============================================================== */
if @nom_base = 'EXP'
	begin
	/* ========================================================== */
	/*   Cle primaire : numero, ordre                                      */
	/* ========================================================== */
	execute sp_primarykey SAD_IMU, numero, ordre

	/* ========================================================== */
	/*   Index : SAD_IMU_PK                                         */
	/* ========================================================== */
	create unique index SAD_IMU_PK on SAD_IMU (numero, ordre)
	end

go
