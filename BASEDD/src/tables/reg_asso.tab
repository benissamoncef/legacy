/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'REG_ASSO' and type = 'U')
	begin
	drop table REG_ASSO
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()

/*
*  Fonctionalit� de la table
*  -------------------------
*  Contient les compl�ments de description des panneaux � message variable
*
*  Description des colonnes de la table
*  ------------------------------------
*/


create table REG_ASSO
(
    numero                   smallint              not null,
    zone			smallint not null,
    scenario		smallint not null
)

/* ajout des droits a public*/
grant all on REG_ASSO to public

/* =============================================================== */
/*   creation des cles primaires et des index en fonction de la base courante                     */
/* =============================================================== */
if @nom_base = 'CFG' 
	begin
	/* ========================================================== */
	/*   Cle primaire : numero                                      */
	/* ========================================================== */
	execute sp_primarykey REG_ASSO, numero, zone, scenario

	/* ========================================================== */
	/*   Index : REG_ASSO                                         */
	/* ========================================================== */
	create unique index REG_ASSO_PK on REG_ASSO (numero, zone, scenario)
	end

if @nom_base = 'CFT'
	begin
	/* ========================================================== */
	/*   Cle primaire : numero                                      */
	/* ========================================================== */
	execute sp_primarykey REG_ASSO, numero, zone,scenario

	/* ========================================================== */
	/*   Index : REG_ASSO_PK                                         */
	/* ========================================================== */
	create unique index REG_ASSO_PK on REG_ASSO (numero, zone,scenario)
	end

go
