/* ============================================================ */
/*   Nom de la base   :  MIGRAZUR                               */
/*   Nom de SGBD      :  SYBASE10                               */
/* ============================================================ */

/* ============================================================ */
/*   Table : ZON_PRV                                            */
/* ============================================================ */

/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'ZON_PRV' and type = 'U')
	begin
	drop table ZON_PRV
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()

/*
*  Fonctionalit� de la table
*  -------------------------
*  Contient les zones d'influence PRV
*
*  Description des colonnes de la table
*  ------------------------------------
*        numero_zone 		: num�ro de la zone
*	 numero_prv		: numero du PRV
*	 autoroute_prv		: autoroute du PRV
*	 sens_prv		: sens du PRV
*	 PR_prv		: PR du PRV
*	 site_prv		: site du PRV
*	 autoroute_zone		: autoroute de la zone
*	 sens_zone		: sens de la zone
*	 PR_debut_zone		: PR debut de la zone
*	 PR_fin_zone		: PR fin de la zone
*	 direction_zone		: direction de la zone
*        type_zone		: type de la zone (1/2/3)
*        inhibition		: indicateur de prise en compte
*        distance		: distance au PR de raccordement a l'autoroute
*/

create table ZON_PRV
(
    numero_zone                	smallint       	not null,
    numero_prv 		smallint      	not null,
    autoroute_prv		tinyint    	not null,
    sens_prv			tinyint     	not null,     
    PR_prv			T_PR      	not null,
    site_prv			T_SITE		not null,
    autoroute_zone		tinyint       	not null, 
    sens_zone		 	tinyint       	not null,
    PR_debut_zone	  	T_PR       	not null,
    PR_fin_zone		 	T_PR       	not null,
    direction_zone		char(15)		,
    type_zone	                tinyint         not null,
    inhibition			bit			,
    distance			int		not null
)
/* ajout des droits a public*/
grant all on ZON_PRV to public

/* =============================================================== */
/*   creation des cles primaires et des index en fonction de la base courante                     */
/* =============================================================== */
if @nom_base = 'CFG'
	begin
	/* ========================================================== */
	/*   Cle primaire : numero                                      */
	/* ========================================================== */
	execute sp_primarykey ZON_PRV, numero_zone

	/* ========================================================== */
	/*   Index : ZON_PRV_PK                                         */
	/* ========================================================== */
	create unique index ZON_PRV_PK on ZON_PRV (numero_zone)
	create index ZON_PRV_FK1 on ZON_PRV (autoroute_prv,sens_prv,PR_prv)
	end

if @nom_base = 'CFT'
	begin
	/* ========================================================== */
	/*   Cle primaire : numero                                      */
	/* ========================================================== */
	execute sp_primarykey ZON_PRV, numero_zone

	/* ========================================================== */
	/*   Index : ZON_PRV_PK                                         */
	/* ========================================================== */
	create unique index ZON_PRV_PK on ZON_PRV (numero_zone)
	create index ZON_PRV_FK1 on ZON_PRV (autoroute_prv,sens_prv,PR_prv)
	end

go
