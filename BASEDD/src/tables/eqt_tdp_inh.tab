/* ============================================================ */
/*   Nom de la base   :  MIGRAZUR                               */
/*   Nom de SGBD      :  SYBASE10                               */
/*   Date de creation :  29/07/94                              */
/* ============================================================ */

/* ============================================================ */
/*   Table : EQT_TDP_INH                                            */
/* ============================================================ */

/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'EQT_TDP_INH' and type = 'U')
	begin
	drop table EQT_TDP_INH
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()

/*
*  Fonctionalit� de la table
*  -------------------------
*  Contient le référentiel des équipements inhibés
*
*  Description des colonnes de la table
*  ------------------------------------
*        type              : numéro du type d'équipement
*        numero            : numéro de l'équipement
*        horodate_debut    : date du début de l'inhibition de l'équipement
*        horodate_fin      : date de fin de l'inhibition de l'équipement
*        utilisateur_debut : utilisateur ayant inhibé l'équipement
*        utilisateur_fin   : utilisateur ayant desinhibé l'équipement
*
*/


create table EQT_TDP_INH
(
    type              tinyint    not null,
    numero            smallint   not null,
    horodate_debut    datetime   not null,
    horodate_fin      datetime   null,
    utilisateur_debut char(100)  not null,
    utilisateur_fin   char(100)  null
)
/* ajout des droits a public*/
grant all on EQT_TDP_INH to public

/* =============================================================== */
/*   creation des cles primaires et des index en fonction de la base courante                     */
/* =============================================================== */
if @nom_base = 'EXP'
	begin
	/* ========================================================== */
	/*   Cle primaire : type, numero, horodate_debut                                      */
	/* ========================================================== */
	execute sp_primarykey EQT_TDP_INH, type, numero, horodate_debut

	/* ========================================================== */
	/*   Index : EQT_TDP_INH_PK                                         */
	/*   Index : EQT_TDP_INH_FK1                                        */
	/* ========================================================== */
	create unique index EQT_TDP_INH_PK on EQT_TDP_INH (type, numero, horodate_debut)
	create index EQT_TDP_INH_FK1 on EQT_TDP_INH (type, numero)
	end

go

