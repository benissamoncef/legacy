/* ============================================================ */
/*   Nom de la base   :  MIGRAZUR                               */
/*   Nom de SGBD      :  SYBASE10                               */
/*   Date de creation :  29/07/94                              */
/* ============================================================ */

/* ============================================================ */
/*   Table : REG_COM	                                         */
/* ============================================================ */

/* Suppression de la table si elle existe */
/* ===========================*/
if exists (select * from sysobjects where name = 'REG_COM' and type = 'U')
	begin
	drop table REG_COM
	end
go

declare @nom_base varchar(10)

/* nom de la base courante */
select @nom_base = db_name()

/*
*  Fonctionalit� de la table
*  -------------------------
*  Contient les compl�ments de description des panneaux � message variable
*
*  Description des colonnes de la table
*  ------------------------------------
*        station                  : station
*        zone     			      : zone

*/


create table REG_COM
(
    station                          smallint              not null,
    zone		                     smallint               not null,
    sens		smallint not null
)
/* ajout des droits a public*/
grant all on REG_COM to public

/* =============================================================== */
/*   creation des cles primaires et des index en fonction de la base courante                     */
/* =============================================================== */
if @nom_base = 'CFG' 
	begin
	/* ========================================================== */
	/*   Cle primaire : station   zone        sens                */
	/* ========================================================== */
	execute sp_primarykey REG_COM, station, zone,sens

	/* ========================================================== */
	/*   Index : REG_COM                                         */
	/* ========================================================== */
	create unique index REG_COM_PK on REG_COM (station, zone,sens)
	end

if @nom_base = 'CFT'
	begin
	/* ========================================================== */
	/*   Cle primaire : station, zone                                      */
	/* ========================================================== */
	execute sp_primarykey REG_COM, station, zone, sens

	/* ========================================================== */
	/*   Index : REG_COM_PK                                         */
	/* ========================================================== */
	create unique index REG_COM_PK on REG_COM (station, zone, sens)
	end

go
